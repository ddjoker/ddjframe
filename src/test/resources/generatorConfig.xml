<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!-- 配置Run As Maven build : Goals 参数 : mybatis-generator:generate
  -Dmybatis.generator.overwrite=true -->
<!-- 配置 tableName,使用 Run As Maven build 生成 dao model 层 -->
<generatorConfiguration>
  <!-- 配置文件路径 -->
  <properties url="${mybatis.generator.generatorConfig.properties}"/>

  <!--数据库驱动包路径 -->
  <classPathEntry location="${drive.class.path}"/>

  <context id="DB2Tables" targetRuntime="MyBatis3">
    <!--关闭注释 -->
    <commentGenerator>
      <property name="suppressAllComments" value="true"/>
    </commentGenerator>

    <!--数据库连接信息 -->
    <jdbcConnection driverClass="${jdbc.driver}" connectionURL="${jdbc.url}"
      userId="${jdbc.username}"
      password="${jdbc.password}">
    </jdbcConnection>

    <!--生成的model 包路径 -->
    <javaModelGenerator targetPackage="${model.package}" targetProject="${target.project}">
      <property name="enableSubPackages" value="ture"/>
      <property name="trimStrings" value="true"/>
    </javaModelGenerator>

    <!--生成xml mapper文件 路径 -->
    <sqlMapGenerator targetPackage="${xml.mapper.package}" targetProject="${target.project}">
      <property name="enableSubPackages" value="ture"/>
    </sqlMapGenerator>

    <!-- 生成的Dao接口 的包路径 -->
    <javaClientGenerator type="XMLMAPPER" targetPackage="${dao.package}"
      targetProject="${target.project}">
      <property name="enableSubPackages" value="ture"/>
    </javaClientGenerator>

    <!--对应数据库表名 -->
    <!-- <table tableName="user"  domainObjectName="user.User"  mapperName="user.UserMapper">
     </table>
     <table tableName="user_login_default" domainObjectName="user.login.UserLoginDefault"
      mapperName="user.login.UserLoginDefaultMapper">
     </table>
     <table tableName="user_login_key" domainObjectName="user.login.UserLoginKey"
     mapperName="user.login.UserLoginKeyMapper">
     </table>
     <table tableName="user_login_ldap" domainObjectName="user.login.UserLoginLdap"
     mapperName="user.login.UserLoginLdapMapper">
     </table>
     <table tableName="user_preferences" domainObjectName="user.UserPreferences"
     mapperName="user.UserPreferencesMapper">
     </table>
     <table tableName="user_settings" domainObjectName="user.UserSettings"
     mapperName="user.UserSettingsMapper">
     </table>-->


    <table tableName="role" domainObjectName="acl.Role" mapperName="acl.RoleMapper">
    </table>
    <table tableName="permission" domainObjectName="acl.Permission" mapperName="acl.PermissionMapper">
    </table>
    <table tableName="role_permission" domainObjectName="acl.RolePermission" mapperName="acl.RolePermissionMapper">
    </table>
    <table tableName="user_role" domainObjectName="acl.user.UserRole" mapperName="acl.user.UserRoleMapper">
    </table>
  </context>
</generatorConfiguration>